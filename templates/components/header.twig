{% set navLinks = craft.navigation.nodes('mainNavigation').all() ?? null %}

<header class="bg-primary">
    <div class="container mx-auto px-8 py-4">
        <div class="flex justify-between items-center gap-x-4 lg:gap-x-8">
            {% if navLinks|length %}
                <nav>
                    <ul class="flex items-center gap-x-4 lg:gap-x-8">
                        {% for link in navLinks %}
                            <li>
                                <a href="{{ link.url }}" class="bg-secondary rounded-lg px-3.5 py-2 text-gray-darker text-sm uppercase font-bold">
                                    {{- link.title -}}
                                </a>
                            </li>
                        {% endfor %}
                    </ul>
                </nav>
            {% endif %}
        </div>
    </div>
</header>